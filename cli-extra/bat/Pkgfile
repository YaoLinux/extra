makedepends=(libssh2 cmake rustc)

packager="Yaolinux Team"
maintainer="rems"

description="Cat clone with syntax highlighting and git integration"
url="https://github.com/sharkdp/bat"

name=bat
version=0.16.0

PKGMK_KEEP_SOURCES='NO'

source=(https://github.com/sharkdp/bat/archive/v${version}.tar.gz)

build() {

cd $name-$version

cargo build --release

install -Dm755 target/release/$name "$PKG/usr/bin/$name"

# Package the man page
  find . -name bat.1 -exec install -Dm644 {} \
       "$PKG/usr/share/man/man1/bat.1" \;
}
