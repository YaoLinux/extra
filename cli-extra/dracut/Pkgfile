makedepends=(systemd asciidoc)

description="Can generate a customized initrams image which contains only whatever is necessary to boot"
url="https://www.kernel.org/pub/linux/utils/boot/dracut/dracut.html"

maintainer="rems"
packager="Yaolinux Team"

name=dracut
version=049

PKGMK_KEEP_SOURCE="no"

source=(https://github.com/dracutdevs/dracut/archive/$version.tar.gz)

build() {

	cd $name-$version

	./configure --prefix=/usr \
                    --sysconfdir=/etc \
                    --systemdsystemunitdir=/lib/systemd/system

	make
	make DESTDIR=$PKG install
}
