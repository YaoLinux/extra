description="Portable Archive Interchange - the POSIX standard archive tool for cpio and tar formats"
url="https://www.mirbsd.org/pax.htm"

maintainer="rems"
packager="Yaolinux Team"

name=pax
version=20190825

source=(https://www.mirbsd.org/MirOS/dist/mir/cpio/paxmirabilis-${version}.cpio.gz)
 
build() {

cd $name-$version/build

sh ../Build.sh -r -tpax

# executables
    install -D -m755 "pax" -t "${PKG}/usr/bin"
    ln -s pax "${PKG}/usr/bin/paxcpio"
    ln -s pax "${PKG}/usr/bin/paxtar"
}