makedepends=(gnutls)
description="A mini smtp client"
url="https://marlam.de/msmtp/"

packager="Yaolinux Team"
maintainer="rems"

name=msmtp
version=1.8.12

source=(https://marlam.de/$name/releases/$name-$version.tar.xz)

build() {
cd $name-$version

   ./configure --prefix=/usr \
               --sysconfdir=/etc \
               --with-libgsasl \
               --with-tls=gnutls

make
make DESTDIR="$PKG" install
}
