makedepends=(sdl sdl-image sdl-mixer mesa xorg-glu freetype sfml csfml)

description="High speed arctic racing game based on Tux Racer."
url="http://sourceforge.net/projects/extremetuxracer/"
packager="Yaolinux Team"
name=extremetuxracer
version=0.7.5

source=(http://sourceforge.net/projects/extremetuxracer/files/releases/$version/etr-$version.tar.xz)
 
build() {

cd etr-$version

./configure --prefix=/usr

make DESTDIR=$PKG install

}
