makedepends=(shared-mime-info qtsvg qttools qtmultimedia libssh libgcrypt glib gnutls libxml2 libpcap pcre hicolor-icon-theme)

description="Network Sniffer with nice GTK3 UI"
url="http://www.wireshark.org"
packager="Yaolinux Team"
maintainer="rems"

name=wireshark
version=3.2.7

run=(shared-mime-info)

source=(https://1.eu.dl.wireshark.org/src/wireshark-$version.tar.xz)

build() {
  mkdir build && cd build

  cmake -GNinja \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_RPATH= \
    -DCMAKE_SKIP_RPATH=ON \
    ../$name-$version
 
  ninja
  DESTDIR=$PKG ninja install
}
