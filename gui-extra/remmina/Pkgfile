# Depends on: gtk3 zlib libjpeg-turbo2 libssh avahi vte3 libgcrypt libsodium xorg-libxdmcp libsecret webkitgtk intltool pkg-config cmake libgnome-keyring xorg-libxkbfile freerdp telepathy-glib libvncserver json-glib spice-gtk spice-protocol

description="Remote desktop client written in GTK+"
url="https://github.com/FreeRDP/Remmina/"
contributors="tnut"
packager="rems <rems@nutyx.org>"
 
name=remmina
version=1.3.5

PKGMK_KEEP_SOURCES="no"

source=(https://github.com/FreeRDP/Remmina/archive/v$version.tar.gz)

build() {

cd Remmina-$version

sed -e 's|ssh_threads|ssh|' -i cmake/FindLIBSSH.cmake # Fix build with libssh 0.8

cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=/usr/lib \
    -DWITH_AVAHI=OFF \
    -DWITH_APPINDICATOR=OFF .

  make
  make DESTDIR=$PKG install
}
