makedepends=(aspell enchant gmime libesmtp rarian pcre gtksourceview2 gtksourceview libnotify kerberos openldap openssl sqlite webkitgtk procmail )

description="The Balsa package contains a GNOME based mail client."
url="https://pawsa.fedorapeople.org/balsa/"
packager="Yaolinux Team"
maintainer="rems"

name=balsa
version=2.5.9

source=(http://pawsa.fedorapeople.org/balsa/$name-$version.tar.bz2)
 
build() {

	cd $name-$version
	
	./configure --prefix=/usr            \
	            --sysconfdir=/etc        \
	            --localstatedir=/var/lib \
	            --with-ssl               \
	            --with-rubrica           \
	            --without-html-widget    \
	            --without-libnotify      \
	            --without-gtkspell       
	make

	make DESTDIR=$PKG install

}
