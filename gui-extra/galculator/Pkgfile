makedepends=(gtk3 )

description="GTK+ based scientific calculator"
url="http://galculator.sourceforge.net/"
maintainer="rems"
packager="Yaolinux Team"
 
name=galculator
version=2.1.4
release=1

source=(http://galculator.mnim.org/downloads/$name-$version.tar.bz2)

build() {

cd $name-$version

  [ -d gtk3 ] || mkdir gtk3
  cd gtk3
  ../configure \
    --prefix=/usr
  make
  
  make DESTDIR=$PKG install

}
