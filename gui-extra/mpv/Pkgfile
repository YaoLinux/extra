makedepends=(desktop-file-utils ffmpeg lcms2 libcdio-paranoia libglade xorg-libxscrnsaver xorg-libxinerama xorg-libxv libxkbcommon libva wayland-protocols libcaca desktop-file-utils hicolor-icon-theme xdg-utils lua samba libdvdnav xorg-libxrandr jack rubberband uchardet mesa python2-docutils ladspa vulkan-headers sdl2-image sdl2-mixer libplacebo)

description="a free, open source, and cross-platform media player"
url="https://mpv.io/"
packager="Yaolinux Team"
maintainer="rems"

name=mpv
_waf_version=2.0.9
version=0.32.0
release=9

PKGMK_KEEP_SOURCES="no"

source=(https://github.com/mpv-player/mpv/archive/v${version}.tar.gz
	https://waf.io/waf-${_waf_version}
        07_io-stdin-used.patch)

prepare() {
  cd ${name}-${version}

  install -m755 ../waf-${_waf_version} waf

  patch -Np1 -i ../07_io-stdin-used.patch
}

build() {
  cd ${name}-${version}

  ./waf configure --prefix=/usr \
    --confdir=/etc/mpv \
    --enable-cdda \
    --enable-dvb \
    --enable-dvdnav \
    --enable-libarchive \
    --enable-libmpv-shared \
    --enable-libsmbclient \
    --enable-sdl2

  ./waf build

  ./waf install --destdir="$PKG"

  install -m644 DOCS/{encoding.rst,tech-overview.txt} \
    "$PKG"/usr/share/doc/mpv

  install -m0644 TOOLS/lua/* \
    -D -t "$PKG"/usr/share/mpv/scripts
}
