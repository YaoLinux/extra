makedepends=(xorg-libx11 xorg-libxrandr xorg-libxcursor libtasn1)

description="Allows access the terminal windows"
url="http://www.rdesktop.org/"
packager="Yaolinux Team"
maintainer="rems"

name=rdesktop
version=1.9.0

source=(https://github.com/rdesktop/rdesktop/releases/download/v$version/rdesktop-$version.tar.gz)

build() {
	cd $name-$version
	
        ./configure --prefix=/usr \
	            --disable-credssp \
                    --disable-smartcard
	make
	make DESTDIR=$PKG install
}
