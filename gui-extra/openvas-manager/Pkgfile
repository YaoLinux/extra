makedepends=(libxslt openvas-libraries rsync sqlite cmake doxygen xmltoman python2)

description="A layer between the OpenVAS Scanner and various client applications"
url="http://www.openvas.org/"

packager="Yaolinux Team"
maintainer="rems"

name=openvas-manager
version=7.0.0

source=(https://github.com/greenbone/openvas/archive/v${version}.tar.gz)

build() {
mkdir -v build && cd build

cmake -DCMAKE_BUILD_TYPE=Release \
      -DSBINDIR=/usr/bin \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DSYSCONFDIR=/etc \
      -DLOCALSTATEDIR=/var ../$name-$version
make
}

package() {

make -C build DESTDIR=$PKG install
}
