makedepends=(curl libevent openssl gtk3 desktop-file-utils gtk-update-icon-cache doxygen gdb)

description="Light and fast Bittorent client (GTK Interface)"
url="http://www.transmissionbt.com/"
packager="Yaolinux Team"
maintainer="rems"

name=transmission
version=2.94

source=(https://raw.githubusercontent.com/transmission/transmission-releases/master/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr \
                --disable-cli \
                --disable-daemon \
                --without-qt
make
make DESTDIR=$PKG install
}
