makedepends=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache gconf gtk3 guile libcanberra librsvg yelp-tools)

description="A gnome card patience game" 
url="https://www.gnome.org/"
maintainer="rems"
packager="Yaolinux Team"
run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache guile)
name=aisleriot
version=3.22.9

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {

cd $name-$version

./configure --prefix=/usr \
            --sysconfdir=/etc \
            --with-card-theme-formats=svg \
            --disable-static \
            --with-platform=gtk-only


make
make DESTDIR=$PKG install
}
