makedepends=(ffmpeg lame pulseaudio lsof qtbase qttools qtmultimedia qtx11extras xorg-libxrandr xdg-utils)

url="http://www.kohaupt-online.de/hp/"
description="An easy to use screencast creator"
packager="Yaolinux Team"
maintainer="rems"
name=vokoscreen
version=2.5.8
_version=beta

PKGMK_KEEP_SOURCES="no"
source=(https://github.com/vkohaupt/$name/archive/$version-${_version}.tar.gz
        desktop_file.patch
        fix_lrelease.patch)

build() {

cd $name-$version-${_version}
# Fix lrelease path
	patch -Np1 < ../fix_lrelease.patch
# Desktop file description
	patch -Np1 < ../desktop_file.patch
mkdir -p ../build
cd ../build
qmake ../$name-$version-${_version} \
      QMAKE_CFLAGS="${CFLAGS}" \
      QMAKE_CXXFLAGS="${CXXFLAGS}" \
      CONFIG+=release \
      CONFIG+=c++14

make
make INSTALL_ROOT=$PKG install
}
