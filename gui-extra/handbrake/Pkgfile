makedepends=( intltool python2 yasm zlib libnotify gstreamer-plugins-base gtk3 dbus-glib libass lame libxml2 opus libvorbis libtheora libsamplerate x264 speex jansson librsvg libgudev x265)

description="Multithreaded video transcoder"
url="https://handbrake.fr"
maintainer="rems"
packager="Yaolinux Team"
 
name=handbrake
version=1.2.2

source=(https://download.handbrake.fr/releases/$version/HandBrake-$version-source.tar.bz2)

unset MAKEFLAGS

build() {

cd HandBrake-$version

./configure --prefix=/usr

make -C build
make -C build DESTDIR="$PKG" install
}
